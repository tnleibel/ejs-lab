<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <h1>Full Menu</h1>
  <ul>
    <h2>Mains</h2>
  <% menu.forEach((item) => { %>
    <% if(item.category === "mains") { %>
        <li><%= item.name %> | $<%= item.price %> | <%= item.rating %>/5<br><%= item.details %><br><br></li>
    <% } %>
  <% }) %>
  <h2>Desserts</h2>
  <% menu.forEach((item) => { %>
    <% if(item.category === "desserts") { %>
        <li><%= item.name %> | $<%= item.price %> | <%= item.rating %>/5<br><%= item.details %><br><br></li>
    <% } %>
  <% }) %>
  <h2>Sides</h2>
  <% menu.forEach((item) => { %>
    <% if(item.category === "sides") { %>
        <li><%= item.name %> | $<%= item.price %> | <%= item.rating %>/5<br><%= item.details %><br><br></li>
    <% } %>
  <% }) %>
  </ul>
</body>
</html>
